generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}


datasource db {
  provider = "sqlite"
}

model Reservation {
  id          String   @id @default(cuid())
  name        String
  email       String
  phone       String?
  date        String
  time        String
  guests      Int
  message     String?
  status      String   @default("pending")
  requestedAt DateTime @default(now())

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Product {
  id          String   @id @default(cuid())
  name        String
  description String?
  priceCents  Int
  imageUrl    String?
  isActive    Boolean  @default(true)

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Order {
  id          String      @id @default(cuid())
  email       String?
  totalCents  Int
  status      String      @default("created")
  createdAt   DateTime    @default(now())

  items       OrderItem[]
}

model OrderItem {
  id          String   @id @default(cuid())
  orderId     String
  productId   String?
  name        String
  priceCents  Int
  qty         Int

  order       Order    @relation(fields: [orderId], references: [id], onDelete: Cascade)
}

